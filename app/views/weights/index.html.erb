<p id="notice"><%= notice %></p>

<h1>Weight</h1>

<table>
  <thead>
    <tr>
      <th>Created at</th>
      <th>Date</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weights.each do |weight| %>
      <tr>
        <td><%= weight.created_at %> </td>
        <td><%= weight.recorded_on %> </td>
        <td><%= weight.weight %></td>
        <td><%= link_to '<button type="button">Show</button>' .html_safe, weight %></td>
        <td><%= link_to '<button type="button">Edit</button>' .html_safe, edit_weight_path(weight) %></td>
        <td><%= link_to '<button type="button">Destroy</button>' .html_safe, weight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

